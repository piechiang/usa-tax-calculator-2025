{
  "name": "usa-tax-calculator-2025",
  "version": "1.0.0",
  "description": "Modern 2025 USA tax calculator with a typed engine and a React UI. Accountant-friendly workflows with client management and data import/export.",
  "private": true,
  "dependencies": {
    "decimal.js": "^10.6.0",
    "i18next": "^21.6.16",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^11.15.3",
    "recharts": "^3.1.2",
    "zod": "^3.23.8"
  },
  "scripts": {
    "prebuild": "npm run build:engine || node -e \"require('fs').mkdirSync('src/engine-dist',{recursive:true})\"",
